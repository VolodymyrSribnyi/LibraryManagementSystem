@model Domain.Entities.ApplicationUser
@{
	ViewData["Title"] = "Add Library Card";
}
<head>
	<link rel="stylesheet" href="~/css/LibraryCardAdd.css" />
</head>
<div class="page-container">
	<div class="page-header">
		<h2>📚 Get Library Card</h2>
	</div>

	<div class="form-container">
		<div class="form-info">
			📋 Please fill in your information to receive your library card. All fields are required except Middle Name.
		</div>

		<form asp-action="AddLibraryCard" asp-controller="LibraryCard" method="post">
			<input type="hidden" name="userId" value="@Model.Id" />
			<div class="form-group">
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Surname" class="control-label"></label>
				<input asp-for="Surname" class="form-control" value="@Model.Surname" />
				<span asp-validation-for="Surname" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="MiddleName" class="control-label optional-label"></label>
				<input asp-for="MiddleName" class="form-control" value="@Model.MiddleName" />
			</div>

			<div class="form-group">
				<input type="submit" value="Add Library Card" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
