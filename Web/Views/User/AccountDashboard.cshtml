@model Application.DTOs.Users.GetUserDTO
<head>
	<link rel="stylesheet" href="~/css/AccountDashboard.css" />
</head>
@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success">
		@TempData["SuccessMessage"]
	</div>
}
@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger">
		@TempData["ErrorMessage"]
	</div>
}

<div class="dashboard-container">
	<div class="dashboard-header">
		<h1>User's Dashboard</h1>
	</div>

	@if (User.Identity.IsAuthenticated)
	{
		<div class="user-info">
			@User.Identity.Name
		</div>

		<div class="dashboard-nav">
			<a asp-controller="ReservingBook" asp-action="GetUserActiveReservations">My Reservations</a>
			<a asp-controller="Notification" asp-action="MySubscriptions">My Subscriptions</a>
			<a asp-controller="Notification" asp-action="MyNotifications">My Notifications</a>
			<a asp-controller="User" asp-action="ChangePassword">Change Password</a>
			<a asp-controller="LibraryCard" asp-action="AddLibraryCard">Get Library Card</a>
			<a asp-controller="User" asp-action="EditProfile">Edit Profile</a>
		</div>

		<div class="dashboard-actions">
			<form method="post" asp-controller="User" asp-action="Logout">
				<input type="submit" value="Logout" class="btn-logout" />
			</form>
		</div>
	}
	else
	{
		<div class="auth-links">
			<a asp-controller="User" asp-action="Login">Login</a>
			<a asp-controller="User" asp-action="Register">Register</a>
		</div>
	}
</div>