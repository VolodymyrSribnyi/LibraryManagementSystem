@model Domain.Entities.ApplicationUser

<head>
	<link rel="stylesheet" href="~/css/UserUpdate.css" />
</head>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container">
    <header>
        <h1>📚 User Update</h1>
        <p class="subtitle">Alexandria Public Library</p>
    </header>

    <div class="form-container">
        <div class="form-header">
            <h2>Update Your Library Account</h2>
            <p>Please fill in your personal information to register for a library card.</p>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
            <input asp-for="Surname" class="form-control" value="@Model.Surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MiddleName" class="control-label"></label>
            <input asp-for="MiddleName" class="form-control" value="@Model.MiddleName" required="false" />
        </div>
        <form id="registrationForm" asp-action="UpdateUser" asp-controller="User">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" value="@Model.Surname" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" value="@Model.MiddleName" required="false" placeholder="Enter your middle name (if applicable)" />
            </div>

            <div class="form-group">
                <label asp-for="Age">Age<span class="required">*</span>
                </label>
                <input type="number"
                       id="age"
                       name="age"
                       required
                       min="1"
                       max="120"
                       asp-for="Age"
                       placeholder="Enter your age">
                <span asp-validation-for="Age" class="text-danger"></span>

            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
