@model Application.DTOs.Books.CreateBookDTO
<head>
	<link rel="stylesheet" href="~/css/AddBook.css" />
</head>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-danger">@TempData["AlertMessage"]</div>
}

<div class="form-container">
    <h1>Add New Book</h1>

    <form asp-action="AddBook" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" required="true" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AuthorId">Author</label>
            <select asp-for="AuthorId" class="form-control">
                @foreach (var author in Model.Authors)
                {
                    <option value="@author.Id">@author.FullName</option>
                }
            </select>
            <div class="author-link-section">
                <h3>Don't see your author? <a asp-controller="Author" asp-action="AddAuthor">Add a new author here</a></h3>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Genre"></label>
            <select asp-for="Genre" class="form-control">
                @foreach (var genre in Enum.GetValues(typeof(Domain.Enums.Genre)))
                {
                    <option value="@genre">@genre</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Publisher"></label>
            <input asp-for="Publisher" class="form-control" required="true" />
            <span asp-validation-for="Publisher" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PublishingYear">Publishing Year</label>
            <input asp-for="PublishingYear" class="form-control" required="true"/>
            <span asp-validation-for="PublishingYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Picture">Book Cover Image</label>
            <input asp-for="Picture" type="file" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" required="true"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Book</button>
    </form>
</div>